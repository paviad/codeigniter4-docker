@page
@model Index
<div class="pager">
    <span>
        @if (Model.CurrentPage > 1) {
            <a asp-page="/Products/Index" asp-route-currentpage="@(Model.CurrentPage - 1)">Previous Page</a>
        }
        else {
            <span class="disabled">Previous Page</span>
        }
    </span>
    <span>
        Page number: @Model.CurrentPage
    </span>
    <span>
        @if (Model.HasMorePages) {
            <a asp-page="/Products/Index" asp-route-currentpage="@(Model.CurrentPage + 1)">Next Page</a>
        }
        else {
            <div class="disabled">Next Page</div>
        }
    </span>
</div>
<table>
    <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products) {
            <tr>
                <td>@p.Code</td>
                <td>@p.Description</td>
            </tr>
        }
    </tbody>
</table>
